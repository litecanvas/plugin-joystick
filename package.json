{
  "name": "@litecanvas/plugin-joystick",
  "version": "0.2.2",
  "description": "Virtual joystick for litecanvas games based on NippleJS",
  "author": "Luiz Bills <luizbills@pm.me>",
  "license": "MIT",
  "homepage": "https://github.com/litecanvas/plugin-joystick#readme",
  "bugs": {
    "url": "https://github.com/litecanvas/plugin-joystick/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/litecanvas/plugin-joystick.git#main"
  },
  "main": "src/index.js",
  "keywords": [
    "litecanvas",
    "joystick",
    "touch",
    "gamedev"
  ],
  "scripts": {
    "start": "esbuild src/index.js --bundle --watch --outfile=dist/dist.js",
    "build": "esbuild src/index.js --bundle --minify --outfile=dist/dist.js",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "esbuild": "^0.20.1"
  },
  "peerDependencies": {
    "@litecanvas/litecanvas": "*"
  },
  "files": [
    "dist",
    "src"
  ]
}
